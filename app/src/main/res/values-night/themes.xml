<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PointOfInterest" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main_orange</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_poi_splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.PointOfInterest</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>